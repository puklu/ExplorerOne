{
    "configurations": [
        {
            "name": "Cotex-Debugger",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/${input:platform}/src/ExplorerOne.elf",
            "request": "launch",
            "type": "cortex-debug",
            "gdbPath": "/usr/bin/gdb-multiarch",
            "servertype": "openocd",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32f3x.cfg"
            ],
            "searchDir": [],
            "runToEntryPoint": "main",
            "showDevDebugOutput": "none"
        },

        {
            "name": "Cotex-Test-Debugger",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/${input:platform}/tests/${input:testName}.elf",
            "request": "launch",
            "type": "cortex-debug",
            "gdbPath": "/usr/bin/gdb-multiarch",
            "servertype": "openocd",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32f3x.cfg"
            ],
            "searchDir": [],
            "runToEntryPoint": "main",
            "showDevDebugOutput": "none"
        },

        {
            "name": "GDB-Doesnt always work",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/ExplorerOne.elf",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "miDebuggerPath": "/usr/bin/gdb-multiarch",
            "MIMode": "gdb",
            "miDebuggerServerAddress": "localhost:3333",
            "logging": {
                "engineLogging": true
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                // {
                //     "description": "Disconnect GDB",
                //     "text": "monitor exit",
                //     "ignoreFailures": true
                // },
            ],
            "preLaunchTask": "debug-visual",
            "postDebugTask": "debug-cleanup",
        }
    ],
    "inputs": [
        {
            "id": "testName",
            "type": "pickString",
            "description": "Select the test name which you want to debug",
            "options": [
                "blinky",
                "drive",
                "interrupt",
                "pwm",
                "usart"
            ],
        },
        {
            "id": "platform",
            "type": "pickString",
            "description": "Select the target platform",
            "options": [
                "stm32f3discovery",
                "not-implemented"
            ],
            "default": "stm32f3discovery"
        }
    ]
}